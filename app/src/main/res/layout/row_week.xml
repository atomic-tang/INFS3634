<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <!--app:srcCompat="@color/common_google_signin_btn_text_dark_default"-->

    <ImageView
        android:id="@+id/weekImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView5" />

    <!--app:srcCompat="@drawable/common_google_signin_btn_icon_light"-->

    <TextView
        android:id="@+id/weekDescriptionTextView"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Introduction to the course with Andriod Activity Life Cycle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/weekImageView"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/weekTitleTextView" />

    <TextView
        android:id="@+id/weekTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Week 1: Introduction"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView5"
        app:layout_constraintLeft_toRightOf="@+id/weekImageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="@+id/weekImageView"
        android:layout_marginTop="0dp" />
</android.support.constraint.ConstraintLayout>